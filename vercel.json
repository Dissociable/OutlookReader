{
    "buildCommand": "pnpm build",
    "outputDirectory": "dist",
    "framework": "vite",
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/api/token",
            "destination": "/api/token.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}